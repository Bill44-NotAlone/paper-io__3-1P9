<Window x:Class="paper_io.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:paper_io"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Height="419" VerticalAlignment="Bottom">
        <Button Content="Запустить игру" HorizontalAlignment="Left" Margin="557,205,0,0" VerticalAlignment="Top" Width="148" Height="54"/>
        <ComboBox HorizontalAlignment="Left" Height="1" Margin="348,205,0,0" VerticalAlignment="Top" Width="4"/>
        <Slider  Maximum="24" TickPlacement="BottomRight" TickFrequency="1" IsSnapToTickEnabled="True" Name="slValue" Margin="163,254,355,108" ValueChanged="slValue_ValueChanged" />
        <TextBox Text="{Binding ElementName=slValue, Path=Value, UpdateSourceTrigger=PropertyChanged}" DockPanel.Dock="Right" TextAlignment="Center" Margin="252,205,444,172" TextChanged="EnterFieldChanged" FontSize="24" />
        <Label Content="Укажите количесво игроков" HorizontalAlignment="Left" Margin="163,135,0,0" VerticalAlignment="Top" Height="55" Width="278" FlowDirection="RightToLeft" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="18"/>

    </Grid>
</Window>
